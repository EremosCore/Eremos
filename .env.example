# Solana RPC Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# For better performance, use a premium RPC provider:
# SOLANA_RPC_URL=https://api.helius.xyz/v0/YOUR_API_KEY
# SOLANA_RPC_URL=https://api.quicknode.com/YOUR_ENDPOINT

# Monitoring Configuration
CONFIDENCE_THRESHOLD=0.8
LARGE_TRANSFER_THRESHOLD_SOL=10
MONITORING_INTERVAL_MS=10000

# Webhook Configuration (optional)
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# Logging
LOG_LEVEL=info

# Agent Control
ENABLE_LAUNCH_TRACKER=true
ENABLE_GHOST_WATCHER=true