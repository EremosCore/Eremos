# Eremos Environment Configuration
# Copy this file to .env.local and configure your values

# =============================================================================
# SOLANA RPC CONFIGURATION (Required)
# =============================================================================
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Alternative RPC providers (uncomment to use):
# SOLANA_RPC_URL=https://solana-api.projectserum.com
# SOLANA_RPC_URL=https://rpc.ankr.com/solana

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
AGENT_LOG_LEVEL=info

# Update interval in milliseconds (default: 5000ms = 5s)
AGENT_UPDATE_INTERVAL=5000

# Maximum signals to store in memory
MAX_SIGNAL_HISTORY=1000

# Confidence threshold for signal emission (0.0 - 1.0)
SIGNAL_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# OPTIONAL: EXTERNAL INTEGRATIONS
# =============================================================================
# Discord webhook for signal notifications
DISCORD_WEBHOOK_URL=

# Telegram bot for alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Slack webhook for team notifications
SLACK_WEBHOOK_URL=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development

# Enable debug mode for verbose logging
DEBUG_MODE=false

# Mock data for testing (true/false)
USE_MOCK_DATA=false
