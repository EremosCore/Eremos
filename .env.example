# ===========================================
# Eremos Configuration
# ===========================================
# Copy this file to .env.local and configure your settings

# ===========================================
# Solana Network Configuration
# ===========================================
# Solana RPC endpoint (mainnet-beta, devnet, testnet, or custom)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Optional: Rate limiting for RPC calls (requests per second)
SOLANA_RPC_RATE_LIMIT=10

# ===========================================
# Agent Configuration
# ===========================================
# Enable/disable specific agents (true/false)
AGENT_THERON_ENABLED=true
AGENT_OBSERVER_ENABLED=true
AGENT_HARVESTER_ENABLED=false
AGENT_SKIERO_ENABLED=false
AGENT_LAUNCHTRACKER_ENABLED=false

# Agent execution intervals (in milliseconds)
AGENT_EXECUTION_INTERVAL=5000
AGENT_SIGNAL_THRESHOLD=0.7

# ===========================================
# Logging Configuration
# ===========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
# Log output format: json, pretty
LOG_FORMAT=pretty
# Enable file logging (true/false)
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/eremos.log

# ===========================================
# Signal Processing
# ===========================================
# Signal confidence threshold (0.0 - 1.0)
SIGNAL_CONFIDENCE_THRESHOLD=0.5
# Signal rate limiting (signals per minute)
SIGNAL_RATE_LIMIT=60
# Enable signal persistence (true/false)
SIGNAL_PERSIST_ENABLED=false

# ===========================================
# Performance & Monitoring
# ===========================================
# Enable performance metrics collection
METRICS_ENABLED=true
# Metrics collection interval (in seconds)
METRICS_INTERVAL=30
# Memory usage threshold for warnings (MB)
MEMORY_WARNING_THRESHOLD=100

# ===========================================
# Development & Debug
# ===========================================
# Enable debug mode (verbose logging)
DEBUG_MODE=false
# Enable agent simulation mode
SIMULATION_MODE=false
# Mock blockchain data for testing
MOCK_BLOCKCHAIN_DATA=false

# ===========================================
# External Integrations (Optional)
# ===========================================
# Webhook URL for signal notifications
WEBHOOK_URL=
# Discord webhook for alerts
DISCORD_WEBHOOK_URL=
# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# ===========================================
# Database Configuration (Optional)
# ===========================================
# Enable database persistence
DATABASE_ENABLED=false
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/eremos.db
# For PostgreSQL: DATABASE_URL=postgresql://user:pass@localhost:5432/eremos

# ===========================================
# Security
# ===========================================
# API rate limiting (requests per minute)
API_RATE_LIMIT=100
# Enable CORS for web dashboard
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000
