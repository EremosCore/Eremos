# ==========================================
# Eremos Configuration
# ==========================================
# Copy this file to .env.local and configure your settings
# All environment variables are optional unless marked as REQUIRED

# ==========================================
# SOLANA CONFIGURATION
# ==========================================

# Solana RPC Endpoint (REQUIRED)
# Use mainnet for production, devnet for testing
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Alternative high-performance RPC endpoints (choose one):
# SOLANA_RPC_URL=https://solana-api.projectserum.com
# SOLANA_RPC_URL=https://api.devnet.solana.com
# SOLANA_RPC_URL=https://rpc.ankr.com/solana

# RPC Connection Settings
RPC_TIMEOUT=30000
RPC_MAX_RETRIES=3
RPC_RETRY_DELAY=1000

# ==========================================
# AGENT CONFIGURATION
# ==========================================

# General Agent Settings
AGENT_LOG_LEVEL=info
AGENT_POLLING_INTERVAL=5000
AGENT_BATCH_SIZE=100
AGENT_MAX_CONCURRENT=5

# Confidence Thresholds (0.0 - 1.0)
CONFIDENCE_THRESHOLD_DEFAULT=0.7
CONFIDENCE_THRESHOLD_LAUNCH=0.8
CONFIDENCE_THRESHOLD_GHOST=0.6

# Agent Enable/Disable Flags
AGENT_THERON_ENABLED=true
AGENT_OBSERVER_ENABLED=true
AGENT_LAUNCH_TRACKER_ENABLED=true
AGENT_HARVESTER_ENABLED=true
AGENT_GHOST_WATCHER_ENABLED=false

# Agent-Specific Intervals (milliseconds)
AGENT_THERON_INTERVAL=5000
AGENT_OBSERVER_INTERVAL=3000
AGENT_LAUNCH_TRACKER_INTERVAL=2000
AGENT_HARVESTER_INTERVAL=10000

# ==========================================
# SIGNAL CONFIGURATION
# ==========================================

# Signal Output Settings
SIGNAL_OUTPUT_PATH=./signals
SIGNAL_OUTPUT_FORMAT=json
SIGNAL_INCLUDE_METADATA=true
SIGNAL_COMPRESS_OUTPUT=false

# Signal Filtering
SIGNAL_MIN_CONFIDENCE=0.5
SIGNAL_RATE_LIMIT=100
SIGNAL_DEDUPE_WINDOW=300000

# ==========================================
# MONITORING & ALERTS
# ==========================================

# Webhook Notifications (optional)
WEBHOOK_URL=
WEBHOOK_SECRET=
WEBHOOK_RETRY_ATTEMPTS=3

# Discord Notifications (optional)
DISCORD_WEBHOOK_URL=
DISCORD_USERNAME=Eremos

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# Email Notifications (optional)
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=
EMAIL_TO=

# ==========================================
# STORAGE & PERSISTENCE
# ==========================================

# Local Storage
DATA_DIRECTORY=./data
LOGS_DIRECTORY=./logs
CACHE_DIRECTORY=./cache

# Database Configuration (optional - for persistent storage)
DATABASE_URL=
DATABASE_TYPE=sqlite
DATABASE_MAX_CONNECTIONS=10

# Redis Configuration (optional - for caching)
REDIS_URL=
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# PERFORMANCE & SCALING
# ==========================================

# Memory Management
MAX_MEMORY_USAGE=1024
MEMORY_CHECK_INTERVAL=60000
AUTO_RESTART_ON_MEMORY_LIMIT=true

# Rate Limiting
RATE_LIMIT_RPC_CALLS=1000
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_BURST=50

# Caching
CACHE_TTL=300000
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# ==========================================
# SECURITY
# ==========================================

# API Keys (if using premium RPC services)
HELIUS_API_KEY=
QUICKNODE_API_KEY=
ALCHEMY_API_KEY=
GENESYSGO_API_KEY=

# Security Settings
ENABLE_CORS=true
CORS_ORIGIN=*
API_RATE_LIMIT=1000
MAX_REQUEST_SIZE=10mb

# ==========================================
# DEVELOPMENT & DEBUGGING
# ==========================================

# Development Mode
NODE_ENV=development
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false

# Debug Specific Components
DEBUG_AGENTS=false
DEBUG_SIGNALS=false
DEBUG_RPC=false
DEBUG_MEMORY=false

# Test Mode Settings
TEST_MODE=false
MOCK_RPC_RESPONSES=false
SIMULATION_MODE=false

# ==========================================
# ADVANCED CONFIGURATION
# ==========================================

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_MACHINE_LEARNING=false
FEATURE_PREDICTIVE_SIGNALS=false
FEATURE_REAL_TIME_DASHBOARD=false

# Experimental Features (use with caution)
EXPERIMENTAL_PARALLEL_PROCESSING=false
EXPERIMENTAL_GPU_ACCELERATION=false
EXPERIMENTAL_QUANTUM_RESISTANCE=false

# Custom Extensions
CUSTOM_AGENT_PATH=./custom-agents
CUSTOM_UTILS_PATH=./custom-utils
PLUGIN_DIRECTORY=./plugins

# ==========================================
# EXAMPLES (for reference)
# ==========================================

# Example mainnet configuration:
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# AGENT_LOG_LEVEL=info
# CONFIDENCE_THRESHOLD_DEFAULT=0.8
# WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Example devnet configuration:
# SOLANA_RPC_URL=https://api.devnet.solana.com
# AGENT_LOG_LEVEL=debug
# CONFIDENCE_THRESHOLD_DEFAULT=0.6
# TEST_MODE=true

# Example high-performance configuration:
# SOLANA_RPC_URL=https://your-premium-rpc-endpoint.com
# AGENT_POLLING_INTERVAL=1000
# AGENT_MAX_CONCURRENT=10
# CACHE_ENABLED=true
# REDIS_URL=redis://localhost:6379
