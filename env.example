# Eremos Environment Configuration
# Copy this file to .env.local and update with your values

# Solana RPC Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Agent Configuration
AGENT_LOG_LEVEL=info
AGENT_SIGNAL_THRESHOLD=0.8
AGENT_MEMORY_LIMIT=1000

# Development Settings
NODE_ENV=development
DEBUG=eremos:*

# Optional: Custom RPC endpoints for different networks
# SOLANA_DEVNET_RPC_URL=https://api.devnet.solana.com
# SOLANA_TESTNET_RPC_URL=https://api.testnet.solana.com

# Optional: External API keys (if needed for enhanced monitoring)
# COINGECKO_API_KEY=your_api_key_here
# ETHERSCAN_API_KEY=your_api_key_here
