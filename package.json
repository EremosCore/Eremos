{
  "name": "eremos-core",
  "version": "0.1.0",
  "description": "Modular agent framework for on-chain activity monitoring and early signal detection on Solana.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "agent:theron": "ts-node agents/theron.ts",
    "agent:observer": "ts-node agents/observer.ts",
    "agent:launch-tracker": "ts-node agents/launchtracker.ts",
    "agent:harvester": "ts-node agents/harvester.ts",
    "agents:all": "npm run agent:theron & npm run agent:observer & npm run agent:launch-tracker",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "docs:dev": "echo 'Documentation server - coming soon'",
    "validate": "npm run type-check && npm run lint && npm run test"
  },
  "keywords": [
    "agent",
    "autonomous",
    "blockchain",
    "solana",
    "onchain",
    "modular",
    "framework",
    "monitoring",
    "signal-detection",
    "web3",
    "defi",
    "typescript",
    "swarm",
    "early-detection",
    "wallet-tracking"
  ],
  "author": "EremosCore",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EremosCore/Eremos.git"
  },
  "homepage": "https://www.eremos.io/",
  "bugs": {
    "url": "https://github.com/EremosCore/Eremos/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "dependencies": {
    "@solana/web3.js": "^1.95.3",
    "@solana/spl-token": "^0.4.8",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "winston": "^3.14.2",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "agents/**/*.ts",
      "utils/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
