{
  "name": "eremos-core",
  "version": "0.1.0",
  "description": "Autonomous swarm agents for early on-chain signal detection - a modular framework for monitoring blockchain activity.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only scripts/dev-agent.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "clean": "rimraf dist",
    "agent:list": "ts-node scripts/agent-list.ts",
    "agent:generate": "ts-node scripts/generate-agent.ts",
    "agent:validate": "ts-node scripts/validate-agent.ts",
    "signal:generate": "ts-node scripts/generate-signal.ts",
    "cluster:simulate": "ts-node scripts/simulate-cluster.ts"
  },
  "keywords": [
    "solana",
    "agent",
    "onchain",
    "modular",
    "blockchain",
    "framework",
    "monitoring",
    "signals",
    "swarm",
    "autonomous"
  ],
  "license": "MIT",
  "author": "EremosCore",
  "repository": {
    "type": "git",
    "url": "https://github.com/EremosCore/Eremos.git"
  },
  "bugs": {
    "url": "https://github.com/EremosCore/Eremos/issues"
  },
  "homepage": "https://www.eremos.io/",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
